<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>게시판 - 목록</title>
    <style>
        body {
            font-family: sans-serif;
            max-width: 900px;
            margin: 40px auto;
            padding: 0 20px;
        }

        h1 {
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
        }

        /* 검색 폼 */
        .search-form {
            display: flex;
            gap: 8px;
            margin-bottom: 20px;
            align-items:
                center;
        }

        .search-form select,
        .search-form input[type="text"] {
            padding: 6px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .search-form input[type="text"] {
            flex: 1;
        }

        /* 테이블 */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        th {
            background: #f5f5f5;
        }

        td a {
            color: #007bff;
            text-decoration: none;
        }

        td a:hover {
            text-decoration: underline;
        }

        .empty-msg {
            text-align: center;
            padding: 40px;
            color: #888;
        }

        /* 페이징 */
        .paging {
            display: flex;
            justify-content: center;
            gap: 4px;
            margin-top:
                20px;
        }

        .paging a,
        .paging span {
            display: inline-block;
            padding: 6px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            text-decoration: none;
            color: #333;
        }

        .paging .active {
            background: #007bff;
            color: white;
            border-color:
                #007bff;
        }

        .paging .disabled {
            color: #ccc;
            pointer-events: none;
        }

        /* 버튼 */
        .btn {
            padding: 8px 20px;
            border: none;
            border-radius: 4px;
            cursor:
                pointer;
            text-decoration: none;
            color: white;
        }

        .btn-primary {
            background: #007bff;
        }

        .btn-sm {
            padding: 5px 14px;
            font-size: 0.9em;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items:
                center;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <h1>게시판</h1>
    <!-- 검색 폼 -->
    <form class="search-form" action="/board/list" method="get">
        <select name="searchType">
            <option value="title">제목</option>
            <option value="writer">작성자</option>
            <option value="titleContent">제목+내용</option>
        </select>
        <input type="text" name="keyword" value="{{keyword}}" placeholder="검색어를 입력하세요">
        <button type="submit" class="btn btn-primary btn-sm">검색</button>
    </form>
    <!-- 글쓰기 버튼 -->
    <div class="top-bar">
        <span>총 {{boards.totalElements}}건</span>
        <a href="/board/write" class="btn btn-primary">글쓰기</a>
    </div>
    <!-- 게시글 테이블 -->
    {{#boards.content.isEmpty}}
    <div class="empty-msg">등록된 게시글이 없습니다.</div>
    {{/boards.content.isEmpty}}
    {{^boards.content.isEmpty}}
    <table>
        <thead>
            <tr>
                <th style="width:60px;">번호</th>
                <th>제목</th>
                <th style="width:100px;">작성자</th>
                <th style="width:70px;">조회수</th>
                <th style="width:140px;">작성일</th>
            </tr>
        </thead>
        <tbody>
            {{#boards.content}}
            <tr>
                <td>{{id}}</td>
                <td style="text-align:left;"><a href="/board/detail/{{id}}">{{title}}</a></td>
                <td>{{writer}}</td>
                <td>{{viewCount}}</td>
                <td>{{createdAt}}</td>
            </tr>
            {{/boards.content}}
        </tbody>
    </table>
    {{/boards.content.isEmpty}}
    <!-- 페이징 -->
    {{^boards.content.isEmpty}}
    <div class="paging">
        {{#boards.first}}
        <span class="disabled">&laquo; 이전</span>
        {{/boards.first}}
        {{^boards.first}}
        <a href="/board/list?page={{boards.prevPage}}&searchType={{searchType}}&keyword={{keyword}}">&laquo; 이전</a>
        {{/boards.first}}

        {{#boards.pageNumbers}}
        {{#active}}
        <span class="active">{{number}}</span>
        {{/active}}
        {{^active}}
        <a href="/board/list?page={{index}}&searchType={{searchType}}&keyword={{keyword}}">{{number}}</a>
        {{/active}}
        {{/boards.pageNumbers}}

        {{#boards.last}}
        <span class="disabled">다음 &raquo;</span>
        {{/boards.last}}
        {{^boards.last}}
        <a href="/board/list?page={{boards.nextPage}}&searchType={{searchType}}&keyword={{keyword}}">다음 &raquo;</a>
        {{/boards.last}}
    </div>
    {{/boards.content.isEmpty}}
</body>
<!-- 검색 조건 유지 스크립트 -->
<script>
    // 페이지 로드 시 select 값 복원
    const searchType = "{{searchType}}";
    if (searchType) {
        document.querySelector('select[name="searchType"]').value = searchType;
    }
</script>

</html>